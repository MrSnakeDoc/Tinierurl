include includes/header.pug
div(class="content")
  h1(class="title is-1") Nouvel incident
  div(class="card-container")
    div(class="new-incident-form box")
      div(class="title-box box")
        h3(class="title is-3") Nouvel incident
      form(action="/incident/new" method="POST")
        h3(class="title is-3") Attraction en panne
        select(name="attraction_id" title="Attraction" required)
          each attraction in attractions
            option(value=`${attraction.id}`) #{attraction.name}
        h3(class="title is-3") Type de l'incident
        textarea(type="text" name="incident_type" class="textarea is-link" placeholder="type de l'incident" required)
        h3(class="title is-3")='Technicien'
        input(type="text" name="assigned_technician" class="input is-info" placeholder="Jean Michel Apeupr√®s")
        button(type="submit" class="a button is-success is-block") Valider